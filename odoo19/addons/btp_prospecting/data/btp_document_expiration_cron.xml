<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job to check for expiring documents -->
        <record id="ir_cron_btp_article_document_expiration_check" model="ir.cron">
            <field name="name">BTP: Check Article Document Expiration</field>
            <field name="model_id" ref="model_btp_article_document"/>
            <field name="state">code</field>
            <field name="code">model = env['btp.article.document']; model._check_document_expiration()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <record id="ir_cron_btp_supplier_document_expiration_check" model="ir.cron">
            <field name="name">BTP: Check Supplier Document Expiration</field>
            <field name="model_id" ref="model_btp_supplier_document"/>
            <field name="state">code</field>
            <field name="code">model = env['btp.supplier.document']; model._check_document_expiration()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>

