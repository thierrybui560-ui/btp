<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Automated Reminder Cron Job -->
        <record id="btp_lead_reminder_cron" model="ir.cron">
            <field name="name">BTP Lead: Send Reminders</field>
            <field name="model_id" ref="model_btp_lead"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
        </record>

        <!-- Escalation Cron Job -->
        <record id="btp_lead_escalation_cron" model="ir.cron">
            <field name="name">BTP Lead: Escalate Stalled Leads</field>
            <field name="model_id" ref="model_btp_lead"/>
            <field name="state">code</field>
            <field name="code">model._cron_escalate_leads()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <!-- 6-Month Loop Reminder Cron Job -->
        <record id="btp_lead_loop_reminder_cron" model="ir.cron">
            <field name="name">BTP Lead: 6-Month Loop Reminders</field>
            <field name="model_id" ref="model_btp_lead"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_loop_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>

