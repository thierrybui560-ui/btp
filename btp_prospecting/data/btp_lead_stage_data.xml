<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Lead Stages -->
        <record id="btp_lead_stage_new" model="btp.lead.stage">
            <field name="name">New</field>
            <field name="sequence">0</field>
            <field name="qualification_status">field</field>
            <field name="require_reminder">True</field>
            <field name="color">1</field>
        </record>

        <record id="btp_lead_stage_qualified" model="btp.lead.stage">
            <field name="name">Qualified</field>
            <field name="sequence">10</field>
            <field name="qualification_status">targeting</field>
            <field name="require_reminder">True</field>
            <field name="color">2</field>
        </record>

        <record id="btp_lead_stage_contacted" model="btp.lead.stage">
            <field name="name">Contacted</field>
            <field name="sequence">20</field>
            <field name="qualification_status">contact</field>
            <field name="require_reminder">True</field>
            <field name="color">3</field>
        </record>

        <record id="btp_lead_stage_to_remind" model="btp.lead.stage">
            <field name="name">To Remind</field>
            <field name="sequence">30</field>
            <field name="qualification_status">contact</field>
            <field name="require_reminder">True</field>
            <field name="color">4</field>
        </record>

        <record id="btp_lead_stage_decision" model="btp.lead.stage">
            <field name="name">Decision</field>
            <field name="sequence">40</field>
            <field name="qualification_status">decision</field>
            <field name="require_reminder">True</field>
            <field name="color">5</field>
        </record>

        <record id="btp_lead_stage_won" model="btp.lead.stage">
            <field name="name">Won</field>
            <field name="sequence">50</field>
            <field name="qualification_status">decision</field>
            <field name="require_reminder">False</field>
            <field name="is_won">True</field>
            <field name="fold">True</field>
            <field name="color">10</field>
        </record>

        <record id="btp_lead_stage_lost" model="btp.lead.stage">
            <field name="name">Lost</field>
            <field name="sequence">60</field>
            <field name="qualification_status">decision</field>
            <field name="require_reminder">False</field>
            <field name="is_lost">True</field>
            <field name="fold">True</field>
            <field name="color">9</field>
        </record>
    </data>
</odoo>

