<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Assignment Rule Tree View -->
    <record id="view_btp_lead_assignment_rule_tree" model="ir.ui.view">
        <field name="name">btp.lead.assignment.rule.tree</field>
        <field name="model">btp.lead.assignment.rule</field>
        <field name="arch" type="xml">
            <list string="Assignment Rules" default_order="sequence">
                <field name="sequence" widget="handle" optional="hide"/>
                <field name="name" string="Rule Name"/>
                <field name="assignment_type" string="Type"/>
                <field name="user_id" string="Assign To"/>
                <field name="team_id" string="Team" optional="show"/>
                <field name="active" widget="boolean_toggle" string="Active"/>
                <field name="current_month_count" string="Current" optional="show"/>
                <field name="max_leads_per_month" string="Max/Month" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Assignment Rule Form View -->
    <record id="view_btp_lead_assignment_rule_form" model="ir.ui.view">
        <field name="name">btp.lead.assignment.rule.form</field>
        <field name="model">btp.lead.assignment.rule</field>
        <field name="arch" type="xml">
            <form string="Lead Assignment Rule">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="assignment_type"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Assignment" name="assignment">
                            <group>
                                <group>
                                    <field name="user_id" required="1"/>
                                    <field name="team_id"/>
                                </group>
                                <group>
                                    <field name="max_leads_per_month"/>
                                    <field name="current_month_count" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Geography Criteria" name="geography" modifiers="{'invisible': [('assignment_type', '!=', 'geography')]}">
                            <group>
                                <field name="country_ids" widget="many2many_tags"/>
                                <field name="city_names" placeholder="Enter city names, one per line (e.g., Paris&#10;Lyon&#10;Marseille)"/>
                                <field name="zip_code_pattern" placeholder="e.g., 75* for Paris area"/>
                            </group>
                        </page>
                        
                        <page string="Client Type Criteria" name="client_type" modifiers="{'invisible': [('assignment_type', '!=', 'client_type')]}">
                            <group>
                                <field name="partner_category_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        
                        <page string="Site Type Criteria" name="site_type" modifiers="{'invisible': [('assignment_type', '!=', 'site_type')]}">
                            <group>
                                <field name="site_type"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Assignment Rule Action -->
    <record id="action_btp_lead_assignment_rule" model="ir.actions.act_window">
        <field name="name">Assignment Rules</field>
        <field name="res_model">btp.lead.assignment.rule</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>

